@model CrudMVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle del contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card-border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle del contacto</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</strong></li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.Telefono)</strong></li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</strong></li>
                </ul>

                <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>
